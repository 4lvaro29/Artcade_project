	<div class="row">
		<% @items.each_slice(4) do |row| %>
			<% row.each do |item| %>
				<div class="col">
					<div class="card">
						<%= image_tag item.image, class:"card-img-top" %>
						<div class="body">
						<h5><%= item.name %></h5>
							<p><%= item.price %></p>
							<%= link_to orders_path, method: :post, class:"btn btn-primary" do %>
								<i class="fa fa-cart-plus" aria-hidden="true"></i> Add to cart
							<% end %>
						</div>
					</div>			
				</div>
			<% end %>
			<div class="w-100"></div>
		<% end %>
	</div>
</div>