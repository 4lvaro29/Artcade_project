
  <div class="row no-gutters"> <!-- problem with background fixed -->
  <div class="container back">
      <div class="col-md-6 col-md-offset-3">
        <%= form_tag update_arcade_components_arcade_path, method: :post do %>
        <h4 class="component">Elige tus componentes</h4>
        <div class="form-group">
          <label for="exampleInputEmail1">Monitores</label>   
          <%= select_tag "arcade[component_ids][]", options_from_collection_for_select(@components.select { |c| c.component_type == Component::MONITORES }, "id", "name"), class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Memorias</label>
          <%= select_tag "arcade[component_ids][]", options_from_collection_for_select(@components.select { |c| c.component_type == Component::MEMORIAS }, "id", "name"), class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Botones</label>
          <%= select_tag "arcade[component_ids][]", options_from_collection_for_select(@components.select { |c| c.component_type == Component::BOTONES }, "id", "name"), class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Palancas</label>
          <%= select_tag "arcade[component_ids][]", options_from_collection_for_select(@components.select { |c| c.component_type == Component::PALANCAS }, "id", "name"), class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Emuladores</label>
          <%= select_tag "arcade[component_ids][]", options_from_collection_for_select(@components.select { |c| c.component_type == Component::EMULADORES }, "id", "name"), class: 'form-control' %>
        </div>
        <div class="form-group">
          <div class="field">
         <label for="exampleInputEmail1">Otros Accesorios</label>
         <%= collection_check_boxes(@arcade, :component_ids, Component.where(component_type: 6), :id, :name, {}, {class: 'form-control'}) %>
       </div>
        </div>

        <%= submit_tag "Crear", class:"btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
