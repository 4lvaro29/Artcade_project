<p id="notice"><%= notice %></p>

<div class="panel panel-default">
	<div class="panel-heading">
		
		<h1><%= @arcade.name %></h1>
		<th>Design</th>
		<th>Design Price</th>
		<th>Component</th>
		<th>Component Price</th>
		<th>Image</th>
		<table class="table">
			<% @arcade.components.each do |component| %>
			<tr>
				<td><%= @arcade.design.name %></td>
				<td><%= @arcade.design.price %></td>
				<td><%= component.name %></td>
				<td><%= component.price %></td>
				<td><%= component.image %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>








